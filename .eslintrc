{
  "root": true,
  "env": {
    "node": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/recommended"
  ],
  "rules": {
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "import/no-unresolved": 0,
    "import/no-unassigned-import": 0,
    "semi": [
      "error",
      "always"
    ],
    "no-console": "off",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "always",
        "asyncArrow": "always"
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "vue/max-attributes-per-line": [
      "error",
      {
        "singleline": 1,
        "multiline": {
          "max": 2,
          "allowFirstLine": true
        }
      }
    ],
    "vue/html-indent": [
      "error",
      2,
      {
        "attribute": 1,
        "baseIndent": 1,
        "closeBracket": 0,
        "alignAttributesVertically": true,
        "ignores": []
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "*.spec.js"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}